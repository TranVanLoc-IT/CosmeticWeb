@page "/create-role"
@model WebCosmetic.Admins.Role.CreateModel
@{
    Layout = "../../../../Views/Shared/_Layout.cshtml";
}
<h1>Tạo role</h1>
<partial name="./_StatusMessage.cshtml" model="@Model.statusMessage"></partial>
<form method="post">
    <div class="form-group">
        <label asp-for="@Model.input._roleName"></label>
        <input asp-for="@Model.input._roleName"/>
    </div>
    <div class="form-group">
        <button class="btn btn-success" type="submit">Tạo role mới</button>
    </div>
</form>