@page "/delete-user-roles/{id}"
@*them id param, onget van giu lai*@
@model WebCosmetic.Admins.Role.DeleteUserRoleModel
@{
    Layout = "../../../../Views/Shared/_Layout.cshtml";
}

<h1>Thêm role cho user </h1>
<partial name="./_StatusMessage.cshtml" model="@Model.statusMessage"></partial>
<form  method="post">
    <div class="form-group">
        <label asp-for="@Model.RolesName"></label>
        @Html.ListBoxFor(m => m.RolesName, Model._listRoles, new
        {
            @class = "role-item",
            id = "role-set"
        })
    </div>
    <div class="form-group">
        <button class="btn btn-success" type="submit">Xóa quyền</button>
    </div>
</form>